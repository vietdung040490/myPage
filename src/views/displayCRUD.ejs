<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
        text-align: center;
    }

    h1 {
        text-align: center;
    }

    .btn-edit {
        border: none;
        background-color: rgb(70, 190, 70);
        border-radius: 8px;
        /* cursor: pointer; */
        /* padding: 5px 10px; */
    }

    .btn-delete {
        border: none;
        background-color: red;
        border-radius: 8px;
        /* cursor: pointer; */
        /* padding: 5px 10px; */

    }

    a {
        text-decoration: none;
        color: black;
    }
</style>
<div class="container mt-5">
    <h1>List all user</h1>
    <table style="width:100%" class="mt-3">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Role ID</th>
            <th>Phone Number</th>
            <th>Action</th>
        </tr>
        <% for(let i=0; i <data.length; i++){%>
            <tr>
                <td>
                    <%= data[i].firstName %>
                </td>
                <td>
                    <%= data[i].lastName %>
                </td>
                <td>
                    <%= data[i].address %>
                </td>
                <td>
                    <%= data[i].email %>
                </td>
                <td>
                    <%= data[i].gender %>
                </td>
                <td>
                    <%= data[i].roleId %>
                </td>
                <td>
                    <%= data[i].phoneNumber %>
                </td>
                <td>
                    <a href="/editCrud?id=<%=data[i].id%>"><button class="btn-edit">Edit</button></a>
                    <a href="/deleteCrud?id=<%=data[i].id%>"><button class="btn-delete">Delete</button></a>
                </td>
            </tr>
            <%}%>
    </table>

</div>